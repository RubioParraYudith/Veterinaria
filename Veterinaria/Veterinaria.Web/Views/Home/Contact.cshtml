<!-- Seccion Contacto-->
<section class="page-section bg-primary" id="contact">
    <div class="container bg-primary ">
        <!-- Contact Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-white mb-0">Envianos un mensaje</h2>

        <!-- Contact Section Form-->
        <div class="row justify-content-center m-4 bg-primary ">
            <div class="col-md-8">
               
                        <form id="contactForm" name="sentMessage" novalidate="novalidate">
                            <div class="control-group text-white">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Nombre</label><input class="form-control border border-warning" id="name" type="text"  required="required" data-validation-required-message="Please enter your name." />
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="control-group text-white">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Correo Electrónico</label><input class="form-control border border-warning" id="email" type="email"  required="required" data-validation-required-message="Please enter your email address." />
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="control-group text-white">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Teléfono</label><input class="form-control border border-warning" id="phone" type="tel"  required="required" data-validation-required-message="Please enter your phone number." />
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="control-group text-white">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Mensaje</label><textarea class="form-control border border-warning" id="message" rows="5" placeholder="Escribe tu mensaje.." required="required" data-validation-required-message="Please enter a message."></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <br />
                            <div id="success"></div>
                            <div class="form-group"><button class="btn btn-outline-light btn-lg btn-block" id="sendMessageButton" type="submit">Enviar</button></div>
                        </form>
                    </div>
                </div>
            </div>
      
</section>

