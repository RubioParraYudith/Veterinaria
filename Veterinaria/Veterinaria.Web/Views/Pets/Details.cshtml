@model Veterinaria.Web.Models.Pet

@{
    ViewBag.Title = "Details";
}

    <div class="row col-12 justify-content-center">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header py-2 bg-primary">
                    <h4 class="text-center m-0 text-white">@Model.Name</h4>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tr>
                            <td>Nombre:</td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td>Tipo de Mascota:</td>
                            <td>@Model.PetType</td>
                        </tr>
                        <tr>
                            <td>Edad:</td>
                            <td>@Model.Age Meses</td>
                        </tr>
                        <tr>
                            <td>Fecha de Nacimiento</td>
                            <td>@Model.BirthDate.ToShortDateString()</td>
                        </tr>
                        <tr>
                            <td>Color</td>
                            <td>@Model.Color</td>
                        </tr>
                        <tr>
                            <td>Raza</td>
                            <td>@Model.Race</td>
                        </tr>
                        <tr>
                            <td>Peso</td>
                            <td>@Model.Weight</td>
                        </tr>
                        <tr>
                            <td>Altura</td>
                            <td>@Model.Height</td>
                        </tr>
                    </table>

                </div>
            </div>

        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-primary">
                    <h6 class="text-white text-center">Fotografía</h6>
                </div>
                <div class="card-header">
                    @if (Model.ImgUrl == null)
                    {
                        <img src="~/Content/img/user.png" class="img-thumbnail"/>
                    }
                    else if (Model.ImgUrl != null)
                    {
                        <img src="~/Content/img/@Model.ImgUrl" />
                    }
                </div>
            </div>
        </div>
    </div>
            
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
